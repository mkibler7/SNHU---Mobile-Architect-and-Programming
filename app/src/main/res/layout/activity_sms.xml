<!-- XML Activity File for activation of SMS messages-->
<!-- We need a textField for the user to enter their phone #
    as well as a button to trigger a permissions request -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/soft_green">


    <!--  Field for user to enter phone #  -->
    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:hint="@string/sms_hint"
        android:inputType="phone" />

    <!--  Button to trigger permissions request  -->
    <Button
        android:id="@+id/buttonSendSMS"
        android:backgroundTint="@color/medium_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendRequest"
        android:onClick="signUpUser"
        />

</LinearLayout>